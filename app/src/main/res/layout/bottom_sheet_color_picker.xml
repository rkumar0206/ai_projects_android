<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSurfaceContainerLowest"
    android:orientation="vertical"
    android:padding="16dp"> <!-- Or your desired bottom sheet background -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/select_color_palette"
            android:textAppearance="?attr/textAppearanceTitleLarge"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/buttonRefreshColors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonApplyColors"
            android:layout_centerVertical="true"
            android:padding="3dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/refresh"
            android:src="@drawable/ic_refresh"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonApplyColors"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonApplyColors"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="@string/apply"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewCombinedPreview"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"> <!-- Initially hidden, can be shown if needed -->

        <LinearLayout
            android:id="@+id/linearLayoutCombinedColors"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="5">
            <!-- Color segments will be added here programmatically if you want a combined preview -->
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- Color Slot 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/color_1"
            android:textAppearance="?attr/textAppearanceBodyMedium" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewColor1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="1dp" />

        <ImageButton
            android:id="@+id/buttonEditColor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/edit_color_1"
            android:src="@drawable/ic_edit_pencil"
            app:tint="?attr/colorOnSurfaceVariant" />
    </LinearLayout>

    <!-- Color Slot 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/color_2"
            android:textAppearance="?attr/textAppearanceBodyMedium" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewColor2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="1dp" />

        <ImageButton
            android:id="@+id/buttonEditColor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/edit_color_2"
            android:src="@drawable/ic_edit_pencil"
            app:tint="?attr/colorOnSurfaceVariant" />
    </LinearLayout>

    <!-- Color Slot 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/color_3"
            android:textAppearance="?attr/textAppearanceBodyMedium" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewColor3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="1dp" />

        <ImageButton
            android:id="@+id/buttonEditColor3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/edit_color_3"
            android:src="@drawable/ic_edit_pencil"
            app:tint="?attr/colorOnSurfaceVariant" />
    </LinearLayout>

    <!-- Color Slot 4 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/color_4"
            android:textAppearance="?attr/textAppearanceBodyMedium" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewColor4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="1dp" />

        <ImageButton
            android:id="@+id/buttonEditColor4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/edit_color_4"
            android:src="@drawable/ic_edit_pencil"
            app:tint="?attr/colorOnSurfaceVariant" />
    </LinearLayout>

    <!-- Color Slot 5 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"> <!-- Extra margin at the bottom -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/color_5"
            android:textAppearance="?attr/textAppearanceBodyMedium" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewColor5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="1dp" />

        <ImageButton
            android:id="@+id/buttonEditColor5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/edit_color_5"
            android:src="@drawable/ic_edit_pencil"
            app:tint="?attr/colorOnSurfaceVariant" />
    </LinearLayout>

</LinearLayout>
