<!-- res/layout/layout_bottom_sheet_dsa_filter.xml -->
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/filter_dsa_problems"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_apply_filter"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/apply" />
        </RelativeLayout>

        <!-- Data Structure Type Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_data_structure"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/data_structure_type">

            <AutoCompleteTextView
                android:id="@+id/actv_data_structure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@+id/til_data_structure"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Algorithm Type Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_algorithm_type"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/algorithm_type">

            <AutoCompleteTextView
                android:id="@+id/actv_algorithm_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@id/til_algorithm_type"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Language Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_language"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/programming_language">

            <AutoCompleteTextView
                android:id="@+id/actv_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@+id/til_language"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Complexity Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_complexity"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/complexity">

            <AutoCompleteTextView
                android:id="@+id/actv_complexity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@+id/til_complexity"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Other Considerations Text Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_other_considerations"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/other_considerations_optional"
            app:counterEnabled="true"
            app:counterMaxLength="200">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_other_considerations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:lines="3"
                android:maxLength="200" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
